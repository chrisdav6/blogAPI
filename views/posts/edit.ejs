<%- include ../partials/header.ejs %>

<div class="container my-5">
  <h1>Edit Post</h1>

  <hr class="mb-5">

  <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Post Name:</label>
      <input class=" form-control" type="text" name="name" id="name" value="<%= post.name %>">
    </div>
    <div class="form-group">
      <label for="url">Post URL:</label>
      <input class="form-control" type="text" name="url" id="url" value="<%= post.url %>">
    </div>
    <div class="form-group">
      <label for="text">Post Text</label>
      <textarea class="form-control" name="text" id="text"><%= post.text %></textarea>
    </div>
    <input class="btn btn-success" type="submit" value="Update Post">
  </form>
</div>

<%- include ../partials/footer.ejs %>
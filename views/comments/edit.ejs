<%- include ../partials/header.ejs %>

<div class="container my-5">
  <h1>Edit Comment</h1>

  <hr class="mb-5">

  <form action="/posts/<%= post.id %>/comments/<%= comment.commentId %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Comment:</label>
      <input class=" form-control" type="text" name="text" id="text" value="<%= comment.text %>">
    </div>
    <input class="btn btn-success" type="submit" value="Update Comment">
  </form>
</div>

